<launch>
  <param name="/use_sim_time" value="false"/>

  <!-- Run RViz -->
  <node pkg="rviz" type="rviz" name="rviz" output="screen" required="true" args="-d $(find goto_box)/SLAM/hec_wheelchair.rviz"/>

  <!-- Run tf -->
  <node pkg="tf" type="static_transform_publisher" name="las_wc_tf" args="-0.23 -0.2 0 0 0 0 /base_stabilized /laser 20" />

  <!-- Run hector mapping -->
  <node name="hector_mapping" pkg="hector_mapping" type="hector_mapping" output="screen">
        <param name="pub_map_odom_transform" value="false"/>
        <param name="map_frame" value="map"/>
        <param name="base_frame" value="/base_link"/>
        <param name="odom_frame" value="odom"/>
        <param name="map_resolution" value="0.02"/>
        <param name="map_size" value="4000"/>
  </node>
</launch>
